rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Produtos: Todos podem ler, mas apenas o admin pode escrever.
    match /produtos/{productId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Vendas: Clientes podem criar, mas apenas o admin pode ler, atualizar ou apagar.
    match /vendas/{vendaId} {
      allow create: if true;
      allow read, update, delete: if request.auth != null;
    }

    // Configurações de Horários: Todos podem ler, mas apenas o admin pode escrever.
    match /configuracoes/horarios {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Contador de Pedidos Diário: Todos podem ler e escrever para permitir a transação.
    match /configuracoes/dailyCounter {
      allow read, write: if true;
    }

    // Fluxo de Caixa: Apenas o admin pode ler e escrever.
    match /fluxoCaixa/{transacaoId} {
      allow read, write: if request.auth != null;
    }

    // Combos: Todos podem ler, mas apenas o admin pode escrever.
    match /combos/{comboId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}